.topView {
  display: flex;
  flex-direction: column;
  height: 200px;
  width: 100%;
  background-image: url('https://raw.githubusercontent.com/wangyansnow/WYBlendColor/master/ScreenShot/bg_img.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  align-items: center;
  margin-top: -5px;
}

.wy_icon {
  display: block;
  overflow: hidden;
  width: 50px;
  height: 50px;
  border-radius: 24px;
  border: 2px solid #e5e5e5;
  margin-top: 31px;
  box-sizing: border-box;
}

.fit_title {
  color: white;
  font-size: 16px;
  font-weight: 400;
  margin-top: 17px;
}

.fit_all {
  color: #3e3e4d;
  font-size: 16;
  font-weight: 500;
  align-self: center;
}

.btn_view {
  border-radius: 5px;
  height: 40px;
  align-self: center;
  width: 60%;
  border: 1px solid #e5e5e5;
  display: flex;
  flex-direction: row;
  margin-top: 20px;
  margin-bottom: 20px;
}

.btn {
  background: white;
  color: #3e3e4d;
  font-size: 15px;
  font-weight: 400;
  border-radius: 4px;
  align-self: center;
  margin: 2px;
  width: 50%;
}

button::after {
  border-radius: 4px;
  border: 0
}

.manager_row {
  display: flex;
  flex-direction: row;
  margin-bottom: 20px;
}

.user_icon {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-left: 30px;
}

.user_label_view {
  margin-left: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user_name {
  font-size: 16px;
  color: #3e3e4d;
  font-weight: 500;
}

.user_fit_count {
  font-size: 12px;
  color: #3e3e4d;
}