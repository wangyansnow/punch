<view class='wy_container'>
  <view wx:if="{{isFit}}">
    <button type='primary' open-type='getUserInfo' bindgetuserinfo='onGetUserInfo' bindtap='testBtnClick'>今日已打卡</button>
    <image src='{{fileId}}' mode='widthFix'></image>
  </view>
  <view wx:else>
    <text>今天锻炼辛苦了，打个卡好好休息吧☺</text>
    <input placeholder='请输入您的锻炼项目' bindinput='inputChanged' class='home_input'/>
    <button type='primary' bindtap='uploadBtnClick'>上传照片</button>
  </view>

  <open-data type="groupName" open-gid="xxxxxx"></open-data>
  <open-data type="userGender" lang="zh_CN"></open-data>
  <open-data type="userNickName" lang="zh_CN"></open-data> 
  <open-data type="userAvatarUrl"></open-data> 
</view>