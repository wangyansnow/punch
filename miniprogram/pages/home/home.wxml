<view class='wy_container'>
  <view class='wy_topView'>
    <text class='wy_year'>{{year}}</text>
    <text class='wy_month'>{{month}}</text>
    <view class='wy_icon'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class='wy_cardView'>
    <text wx:if='{{!isFit}}' class='card_title'>锻炼辛苦了，打完卡好好休息吧🙂</text>
    <text wx:else class='card_title'>今天已经打卡</text>
    <input wx:if='{{user == null}}' placeholder='请输入姓名' class='home_input' placeholder-style='margin-left:12px' bindinput='usernameChanged'></input>
    <input wx:if='{{!isFit}}' placeholder='请输入运动类型和时间' class='home_input' placeholder-style='margin-left:12px' bindinput='inputChanged'></input>
    <input wx:else  class='home_input' disabled='true' value='{{desc}}'></input>
    <image src='{{imgsrc}}' class='home_image' mode='scaleToFill' bindtap='imageClick'></image>
    <button wx:if='{{!isFit}}' class='fitBtn' open-type='getUserInfo' bindgetuserinfo='onGetUserInfo' disabled='{{isFit}}'>打卡</button>
     <button wx:else class='fitBtn' disabled='{{isFit}}'>已打卡</button>
  </view>
</view>